<h1>Listing Products</h1>
<table class='table-striped table-bordered'>
  <thead>
  <tr>
    <th> ID </th>
    <th> Name </th>
    <th> Description </th>
    <th> Price </th>
    <th> Category </th>
    <th> Action</th>
  </tr>
  </thead>
<tbody>
  <% @products.each do |u| %>
  <tr>
    <td><%= u.id %></td>
    <td><%= u.name %></td>
    <td><%= u.description %></td>
    <td> <%= number_to_currency(u.price) %></td>
    <td> <%= u.category.name %></td>
    <td><button type="button" name="Show"><a href="/products/<%= u.id %>">Show</a></button> | <button type="button" name="Edit"><a href="/products/<%= u.id %>/edit">Edit</a></button> | <a href="/products/<%= u.id %>" data-method="delete"><button id='Destroy'>Destroy</button></a></td>
  </tr>
  <%end%>
</tbody>

</table>
<a href="/products/new">New Product</a>
